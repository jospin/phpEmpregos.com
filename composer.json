{
    "name": "phpEmpregos/phpEmpregos.com",
    "description": "Vagas PHP",
    "keywords": ["vagas", "empregos", "php"],
    "license": "MIT",
    "type": "project",
    "require": {
        "laravel/framework": "5.0.*",
        "mathiasgrimm/laravel-dot-env-gen": "dev-master",
        "mathiasgrimm/x": "dev-master",
        "mathiasgrimm/arraypath": "dev-master",
        "guzzlehttp/guzzle": "~4.0",
        "barryvdh/laravel-ide-helper": "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "fzaninotto/faker": "1.5.*@dev"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/",
            "phpEmpregos\\": "phpEmpregos/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan ide-helper:generate",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan ide-helper:generate",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
